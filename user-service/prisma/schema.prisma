generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT // Cliente padrão que faz compras
  ADMIN  // Administrador do sistema 
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role     @default(CLIENT) // CLIENTE por padrão
  createdAt DateTime @default(now())
}